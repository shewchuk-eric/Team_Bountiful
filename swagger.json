      "get": {
        "description": "List all users in the collection.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/createNewUser": {
      "post": {
        "description": "Add a new user to the collection. Validates all fields using Joi.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "string"
                },
                "lastName": {
                  "example": "string"
                },
                "email": {
                  "example": "string"
                },
                "userName": {
                  "example": "string"
                },
                "password": {
                  "example": "string"
                },
                "accessLevel": {
                  "example": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/updateUser/{id}": {
      "put": {
        "description": "Make updates to an existing user in the collection. Validates all fields using Joi.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "string"
                },
                "lastName": {
                  "example": "string"
                },
                "email": {
                  "example": "string"
                },
                "userName": {
                  "example": "string"
                },
                "password": {
                  "example": "string of 8-30 characters, alphanumeric"
                },
                "accessLevel": {
                  "example": "string (default: 'user')"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/changePassword/{id}": {
      "patch": {
        "description": "Change the password for an existing user in the collection.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
